{
  "dashboard": {
    "id": null,
    "title": "AI Trading System - Security Monitoring",
    "tags": ["trading-system", "security"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Failed Login Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(auth_failed_login_attempts_total[1h])",
            "legendFormat": "Failed Logins/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Rate Limit Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(rate_limit_violations_total[1h])",
            "legendFormat": "Rate Limit Hits/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "auth_active_sessions",
            "legendFormat": "Active Sessions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{circuit_breaker}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow", 
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "CLOSED"
                  },
                  "1": {
                    "text": "HALF-OPEN"
                  },
                  "2": {
                    "text": "OPEN"
                  }
                }
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Authentication Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(auth_successful_logins_total[5m])",
            "legendFormat": "Successful Logins/sec"
          },
          {
            "expr": "rate(auth_failed_login_attempts_total[5m])",
            "legendFormat": "Failed Logins/sec"
          },
          {
            "expr": "rate(auth_password_changes_total[5m])",
            "legendFormat": "Password Changes/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "API Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{code=\"401\"}[5m])",
            "legendFormat": "Unauthorized Requests/sec"
          },
          {
            "expr": "rate(http_requests_total{code=\"403\"}[5m])",
            "legendFormat": "Forbidden Requests/sec"
          },
          {
            "expr": "rate(http_requests_total{code=\"429\"}[5m])",
            "legendFormat": "Rate Limited/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Failed Logins by IP",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (ip_address) (increase(auth_failed_login_attempts_total[1h])))",
            "legendFormat": "{{ip_address}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "table",
              "filterable": true
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "User Account Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (auth_users_by_status)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s"
  }
}