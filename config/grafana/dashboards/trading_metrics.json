{
  "dashboard": {
    "id": null,
    "title": "AI Trading System - Trading Metrics",
    "tags": ["trading-system", "trading"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Positions",
        "type": "stat",
        "targets": [
          {
            "expr": "trading_portfolio_active_positions",
            "legendFormat": "Active Positions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Portfolio Value",
        "type": "stat",
        "targets": [
          {
            "expr": "trading_portfolio_total_value",
            "legendFormat": "Total Value"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Daily PnL",
        "type": "stat",
        "targets": [
          {
            "expr": "trading_portfolio_daily_pnl",
            "legendFormat": "Daily P&L"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": -1000
                },
                {
                  "color": "yellow",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 100
                }
              ]
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Orders Executed",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(trading_orders_executed_total[1d])",
            "legendFormat": "Orders Today"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Portfolio Value Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "trading_portfolio_total_value",
            "legendFormat": "Portfolio Value"
          },
          {
            "expr": "trading_portfolio_cash_value",
            "legendFormat": "Cash"
          }
        ],
        "yAxes": [
          {
            "label": "Value ($)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Trade Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trading_orders_successful_total[5m]) / rate(trading_orders_executed_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "yAxes": [
          {
            "label": "Success Rate (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Risk Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "trading_risk_var_daily",
            "legendFormat": "Daily VaR"
          },
          {
            "expr": "trading_risk_max_drawdown",
            "legendFormat": "Max Drawdown"
          },
          {
            "expr": "trading_risk_exposure_ratio",
            "legendFormat": "Exposure Ratio"
          }
        ],
        "yAxes": [
          {
            "label": "Risk Metrics"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m"
  }
}