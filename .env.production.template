# AI Trading System - Production Environment Variables
# Copy this file to .env.production and fill in real values

# =============================================================================
# JWT Authentication & Security
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-at-least-32-chars
JWT_EXPIRY_HOURS=24
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password-here
# Or set raw password (will be hashed automatically - less secure)
# ADMIN_PASSWORD=your-secure-admin-password

# =============================================================================
# CORS & Host Security
# =============================================================================
CORS_ALLOWED_ORIGINS=https://trading.main-nilante.com,https://www.trading.main-nilante.com
TRUSTED_HOSTS=trading.main-nilante.com,www.trading.main-nilante.com,localhost

# =============================================================================
# Database & Storage Credentials
# =============================================================================
# Grafana Admin Password
GRAFANA_PASSWORD=your-secure-grafana-password

# MinIO Object Storage
MINIO_ROOT_USER=your-minio-admin-user
MINIO_ROOT_PASSWORD=your-secure-minio-password

# Redis Password (if auth enabled)
REDIS_PASSWORD=your-redis-password

# QuestDB Authentication (if enabled)
QUESTDB_USERNAME=your-questdb-user
QUESTDB_PASSWORD=your-questdb-password

# =============================================================================
# External API Keys
# =============================================================================
# Market Data APIs
POLYGON_API_KEY=your-polygon-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key

# News APIs
NEWS_API_KEY=your-news-api-key
FINANCIAL_NEWS_API_KEY=your-financial-news-key

# Broker APIs
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
INTERACTIVE_BROKERS_KEY=your-ib-key

# =============================================================================
# AI/ML Service Keys
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGING_FACE_TOKEN=your-hugging-face-token
COHERE_API_KEY=your-cohere-api-key

# =============================================================================
# Weaviate Security
# =============================================================================
WEAVIATE_AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=false
WEAVIATE_AUTHENTICATION_APIKEY_ENABLED=true
WEAVIATE_AUTHENTICATION_APIKEY_ALLOWED_KEYS=your-weaviate-api-key
WEAVIATE_AUTHENTICATION_APIKEY_USERS=admin

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# Let's Encrypt email for certificate generation
LETSENCRYPT_EMAIL=admin@main-nilante.com

# =============================================================================
# Application Configuration
# =============================================================================
# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5

# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# Performance Tuning
# =============================================================================
# Redis Memory Settings
REDIS_MAX_MEMORY=16gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# QuestDB Memory Settings
QUESTDB_JAVA_OPTS=-Xms8g -Xmx16g

# Pulsar Memory Settings
PULSAR_MEM=-Xms4g -Xmx16g -XX:MaxDirectMemorySize=8g

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=trading-system-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# Deployment Configuration
# =============================================================================
# Server deployment paths
SERVER_HOST=168.119.145.135
DEPLOYMENT_PATH=/srv/trading
DATA_PATH=/mnt/fastdrive/trading
BULK_DATA_PATH=/mnt/bulkdata/trading

# Docker resource limits
DOCKER_CPU_LIMIT=0.8
DOCKER_MEMORY_LIMIT=0.9

# =============================================================================
# Development/Testing Overrides (Production should leave these unset)
# =============================================================================
# DEBUG=false
# TESTING=false
# MOCK_EXTERNAL_APIS=false