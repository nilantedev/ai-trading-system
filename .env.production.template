# AI Trading System - Production Environment Variables Template
# CRITICAL: Copy this to .env.production and fill in ALL values
# NEVER commit .env.production to version control
# ALL values marked as REQUIRED must be set or deployment will fail

# =============================================================================
# REQUIRED SECURITY CONFIGURATION - NO DEFAULTS ALLOWED
# =============================================================================

# Database (REQUIRED - Generate strong passwords)
DB_USER=  # REQUIRED
DB_PASSWORD=  # REQUIRED - Generate: openssl rand -base64 32
DB_NAME=  # REQUIRED
DB_HOST=postgres
DB_PORT=5432

# Security Keys (REQUIRED - Must be cryptographically secure)
SECRET_KEY=  # REQUIRED - Generate: openssl rand -hex 32
JWT_SECRET=  # REQUIRED - Generate: openssl rand -hex 32
ENCRYPTION_KEY=  # REQUIRED - Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Redis Security (REQUIRED)
REDIS_PASSWORD=  # REQUIRED - Generate: openssl rand -base64 32
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring Access (REQUIRED)
GRAFANA_USER=  # REQUIRED
GRAFANA_PASSWORD=  # REQUIRED - Generate: openssl rand -base64 24
PROMETHEUS_AUTH_TOKEN=  # REQUIRED - Generate: openssl rand -hex 32

# =============================================================================
# TRADING API KEYS (REQUIRED for trading functionality)
# =============================================================================

# Primary Trading Platform
ALPACA_API_KEY=  # REQUIRED
ALPACA_SECRET=  # REQUIRED
ALPACA_BASE_URL=https://api.alpaca.markets

# Market Data Providers (At least one required)
POLYGON_API_KEY=  # REQUIRED for market data
ALPHA_VANTAGE_API_KEY=  # Optional backup data source

# AI/ML Services (Required for ML features)
OPENAI_API_KEY=  # REQUIRED for AI features
ANTHROPIC_API_KEY=  # Optional AI backup

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================

# CORS & Trusted Hosts (REQUIRED - Set your actual domain)
CORS_ORIGINS=  # REQUIRED - e.g., https://trading.yourdomain.com
TRUSTED_HOSTS=  # REQUIRED - e.g., trading.yourdomain.com

# SSL/TLS (REQUIRED for production)
LETSENCRYPT_EMAIL=  # REQUIRED - Your admin email for SSL certificates

# =============================================================================
# BACKUP & RECOVERY (REQUIRED)
# =============================================================================

BACKUP_ENABLED=true
BACKUP_PATH=/mnt/bulkdata/backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=  # REQUIRED - Generate: openssl rand -hex 32

# Optional S3 Backup
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# OPERATIONAL SETTINGS
# =============================================================================

ENVIRONMENT=production
LOG_LEVEL=INFO
API_PORT=8000
DEBUG=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Performance
API_WORKERS=4
WEBSOCKET_MAX_CONNECTIONS=1000

# =============================================================================
# OPTIONAL ADVANCED FEATURES
# =============================================================================

# HashiCorp Vault (Recommended for production)
VAULT_ADDR=
VAULT_TOKEN=

# Weaviate Vector DB
WEAVIATE_API_KEY=

# Additional Trading Platforms
BINANCE_API_KEY=
BINANCE_SECRET=
INTERACTIVE_BROKERS_KEY=

# News & Sentiment APIs
NEWS_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=