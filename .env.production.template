# AI Trading System - Production Environment Variables
# Copy this file to .env.production and fill in real values
# CRITICAL: All placeholder values must be replaced with secure, unique values

# =============================================================================
# Environment Configuration
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Authentication - MUST be at least 32 characters, cryptographically secure
JWT_SECRET_KEY=REPLACE_WITH_SECURE_32_CHAR_SECRET
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Authentication Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
API_KEY_LENGTH=32

# =============================================================================
# CORS & Host Security - NEVER use wildcards in production
# =============================================================================
CORS_ORIGINS=https://trading.main-nilante.com,https://www.trading.main-nilante.com
TRUSTED_HOSTS=trading.main-nilante.com,www.trading.main-nilante.com
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Database Configuration - ALL passwords must be changed
# =============================================================================
# PostgreSQL
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_POSTGRES_PASSWORD
POSTGRES_DB=trading_system
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD
REDIS_HOST=localhost
REDIS_PORT=6379

# Grafana Admin Password
GRAFANA_PASSWORD=REPLACE_WITH_SECURE_GRAFANA_PASSWORD

# MinIO Object Storage (if used)
MINIO_ROOT_USER=REPLACE_WITH_MINIO_USER
MINIO_ROOT_PASSWORD=REPLACE_WITH_SECURE_MINIO_PASSWORD

# QuestDB Authentication (if enabled)
QUESTDB_USERNAME=REPLACE_WITH_QUESTDB_USER
QUESTDB_PASSWORD=REPLACE_WITH_SECURE_QUESTDB_PASSWORD

# =============================================================================
# Trading & External API Keys - REQUIRED for production
# =============================================================================
# Alpaca Trading API
ALPACA_API_KEY=REPLACE_WITH_ALPACA_API_KEY
ALPACA_SECRET_KEY=REPLACE_WITH_ALPACA_SECRET_KEY
ALPACA_BASE_URL=https://api.alpaca.markets

# Market Data APIs  
POLYGON_API_KEY=REPLACE_WITH_POLYGON_API_KEY
ALPHA_VANTAGE_API_KEY=REPLACE_WITH_ALPHA_VANTAGE_KEY
YAHOO_FINANCE_API_KEY=REPLACE_WITH_YAHOO_FINANCE_KEY

# News APIs
NEWS_API_KEY=REPLACE_WITH_NEWS_API_KEY
REDDIT_CLIENT_ID=REPLACE_WITH_REDDIT_CLIENT_ID
REDDIT_CLIENT_SECRET=REPLACE_WITH_REDDIT_CLIENT_SECRET

# Other Broker APIs (optional)
INTERACTIVE_BROKERS_KEY=REPLACE_WITH_IB_KEY

# =============================================================================
# Secrets Management (Recommended for Production)
# =============================================================================
# HashiCorp Vault
VAULT_URL=REPLACE_WITH_VAULT_URL
VAULT_TOKEN=REPLACE_WITH_VAULT_TOKEN
VAULT_MOUNT_PATH=secret

# AWS Secrets Manager (alternative to Vault)
AWS_SECRET_MANAGER_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY

# Azure Key Vault (alternative to Vault)
AZURE_KEY_VAULT_URL=REPLACE_WITH_AZURE_VAULT_URL
AZURE_CLIENT_ID=REPLACE_WITH_AZURE_CLIENT_ID
AZURE_CLIENT_SECRET=REPLACE_WITH_AZURE_CLIENT_SECRET
AZURE_TENANT_ID=REPLACE_WITH_AZURE_TENANT_ID

# =============================================================================
# AI/ML Service Keys
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGING_FACE_TOKEN=your-hugging-face-token
COHERE_API_KEY=your-cohere-api-key

# =============================================================================
# Weaviate Security
# =============================================================================
WEAVIATE_AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=false
WEAVIATE_AUTHENTICATION_APIKEY_ENABLED=true
WEAVIATE_AUTHENTICATION_APIKEY_ALLOWED_KEYS=your-weaviate-api-key
WEAVIATE_AUTHENTICATION_APIKEY_USERS=admin

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# Let's Encrypt email for certificate generation
LETSENCRYPT_EMAIL=admin@main-nilante.com

# =============================================================================
# Application Configuration
# =============================================================================
# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5

# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# Performance Tuning
# =============================================================================
# Redis Memory Settings
REDIS_MAX_MEMORY=16gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# QuestDB Memory Settings
QUESTDB_JAVA_OPTS=-Xms8g -Xmx16g

# Pulsar Memory Settings
PULSAR_MEM=-Xms4g -Xmx16g -XX:MaxDirectMemorySize=8g

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=trading-system-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# Deployment Configuration
# =============================================================================
# Server deployment paths
SERVER_HOST=168.119.145.135
DEPLOYMENT_PATH=/srv/trading
DATA_PATH=/mnt/fastdrive/trading
BULK_DATA_PATH=/mnt/bulkdata/trading

# Docker resource limits
DOCKER_CPU_LIMIT=0.8
DOCKER_MEMORY_LIMIT=0.9

# =============================================================================
# Development/Testing Overrides (Production should leave these unset)
# =============================================================================
# DEBUG=false
# TESTING=false
# MOCK_EXTERNAL_APIS=false