# Environment Configuration for AI Trading System
# Copy this file to .env and fill in your actual values

# ================================
# Database Credentials
# ================================
REDIS_PASSWORD=your_secure_redis_password
QUESTDB_PASSWORD=your_secure_questdb_password
POSTGRES_PASSWORD=your_secure_postgres_password

# ================================
# Monitoring & Observability
# ================================
GRAFANA_PASSWORD=your_secure_grafana_password

# ================================
# Trading API Keys - Add as you acquire them
# ================================
# Market Data Providers (Priority Order)
POLYGON_API_KEY=                    # $99/month - PRIMARY - Real-time market data
ALPHA_VANTAGE_API_KEY=              # $49/month - BACKUP - Market data + sentiment
IEX_CLOUD_API_KEY=                  # $9/month - BUDGET - Basic market data

# News APIs (Priority Order)  
BENZINGA_API_KEY=                   # $199/month - PRIMARY - Premium financial news
NEWS_API_KEY=                       # $449/month - BACKUP - Global news sources

# Social Media APIs (Priority Order)
TWITTER_API_KEY=                    # $100/month - Real-time social sentiment
TWITTER_API_SECRET=                 # Required with TWITTER_API_KEY
TWITTER_BEARER_TOKEN=               # Optional - Enhanced access

REDDIT_CLIENT_ID=                   # $100/month - WSB, stocks, investing sentiment
REDDIT_CLIENT_SECRET=               # Required with REDDIT_CLIENT_ID
REDDIT_USER_AGENT=trading_bot_v1    # Optional - User agent string

# Free Social Media APIs
DISCORD_BOT_TOKEN=                  # FREE - Trading servers, options flow
STOCKTWITS_ACCESS_TOKEN=            # FREE - Financial social sentiment

# Broker APIs
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # or https://api.alpaca.markets for live

# AI/ML APIs
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ================================
# System Configuration
# ================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Timezone (important for trading hours)
TZ=America/New_York

# Security
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_at_least_32_chars
ENCRYPTION_KEY=your_32_char_encryption_key

# ================================
# Resource Limits (Production)
# ================================
REDIS_MAX_MEMORY=8gb
QUESTDB_MAX_MEMORY=16gb
PROMETHEUS_RETENTION_DAYS=30d
PROMETHEUS_MAX_SIZE=10GB

# ================================
# Network Configuration
# ================================
TRAEFIK_DOMAIN=trading.main-nilante.com
ACME_EMAIL=admin@main-nilante.com

# ================================
# Feature Flags
# ================================
FEATURE_PAPER_TRADING_ENABLED=true
FEATURE_LIVE_TRADING_ENABLED=false
FEATURE_AI_DECISIONS_ENABLED=true
FEATURE_RISK_MANAGEMENT_ENABLED=true

# ================================
# Trading Parameters
# ================================
MAX_POSITION_SIZE=10000.00
RISK_LIMIT_PERCENT=2.0
MAX_DAILY_TRADES=100
CIRCUIT_BREAKER_THRESHOLD=5

# ================================
# Development Overrides (for docker-compose.dev.yml)
# ================================
DEV_REDIS_PASSWORD=dev123
DEV_QUESTDB_PASSWORD=dev123
DEV_GRAFANA_PASSWORD=admin