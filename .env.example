# AI Trading System - Environment Configuration
# Copy this to .env and fill in your actual values

# =================================
# Trading API Configuration
# =================================
ALPACA_API_KEY=your_alpaca_paper_key_here
ALPACA_SECRET_KEY=your_alpaca_paper_secret_here  
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# =================================
# Data Provider APIs
# =================================
POLYGON_API_KEY=your_polygon_key_here
NEWS_API_KEY=your_newsapi_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# =================================
# Database Configuration
# =================================
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_postgres_password_123
POSTGRES_DB=trading_system

REDIS_PASSWORD=secure_redis_password_123
QUESTDB_PASSWORD=secure_questdb_password_123

# =================================
# Security Configuration  
# =================================
JWT_SECRET_KEY=your_jwt_secret_key_here_32_chars_min
ENCRYPTION_KEY=your_encryption_key_here_32_chars_min

# =================================
# Monitoring Configuration
# =================================
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_123

# =================================
# System Configuration
# =================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# =================================
# Resource Limits (Production)
# =================================
MAX_CPU_CORES=32
MAX_MEMORY_GB=400
MODEL_MEMORY_GB=150