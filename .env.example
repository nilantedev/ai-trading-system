# AI Trading System - Environment Configuration  
# Copy this to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=false
SERVICE_NAME=ai-trading-system
SERVICE_VERSION=2.0.0-dev

# =============================================================================
# SECURITY SETTINGS (SECURITY_ prefix) - CRITICAL FOR PRODUCTION
# =============================================================================
# CRITICAL: Generate secure key in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_SECRET_KEY=your-super-secret-jwt-key-change-in-production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRE_MINUTES=30

# CORS Configuration
SECURITY_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8007
SECURITY_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60

# =============================================================================
# TRADING SETTINGS (TRADING_ prefix) - REQUIRED
# =============================================================================
# CRITICAL: Required for trading functionality
TRADING_ALPACA_API_KEY=your_alpaca_paper_key_here
TRADING_ALPACA_SECRET_KEY=your_alpaca_paper_secret_here
TRADING_POLYGON_API_KEY=your_polygon_key_here

# Trading Parameters
TRADING_PAPER_TRADING=true
TRADING_MAX_POSITION_SIZE=10000.0
TRADING_RISK_LIMIT_PERCENT=2.0

# Market Hours (NYSE)
TRADING_MARKET_OPEN_HOUR=9
TRADING_MARKET_OPEN_MINUTE=30
TRADING_MARKET_CLOSE_HOUR=16
TRADING_MARKET_CLOSE_MINUTE=0

# =============================================================================
# PhD-LEVEL INTELLIGENCE API KEYS (Recommended for full capabilities)
# =============================================================================
TWITTER_BEARER_TOKEN=your_twitter_v2_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
NEWS_API_KEY=your_newsapi_key_here

# =============================================================================
# AI/ML SETTINGS (AI_ prefix)
# =============================================================================
AI_OPENAI_API_KEY=your_openai_api_key_here
AI_ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_LOCAL_MODEL_PATH=/models
AI_MODEL_CACHE_SIZE=32GB
AI_MAX_BATCH_SIZE=16
AI_INFERENCE_TIMEOUT=30

# =============================================================================
# DATABASE SETTINGS (DB_ prefix)
# =============================================================================
# Redis Configuration
DB_REDIS_URL=redis://localhost:6379/0
DB_REDIS_HOST=localhost
DB_REDIS_PORT=6379
DB_REDIS_DB=0
DB_REDIS_PASSWORD=secure_redis_password_123
DB_REDIS_MAX_CONNECTIONS=30

# QuestDB Configuration
DB_QUESTDB_HOST=localhost
DB_QUESTDB_HTTP_PORT=9000
DB_QUESTDB_PG_PORT=8812
DB_QUESTDB_INFLUX_PORT=9009
DB_QUESTDB_USER=
DB_QUESTDB_PASSWORD=secure_questdb_password_123
DB_QUESTDB_DATABASE=qdb

# PostgreSQL (optional)
DB_POSTGRES_URL=postgresql://trading_user:secure_postgres_password_123@localhost:5432/trading_system
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=trading_user
DB_POSTGRES_PASSWORD=secure_postgres_password_123
DB_POSTGRES_DATABASE=trading_system

# Vector and Graph Databases
DB_WEAVIATE_URL=http://localhost:8080
DB_WEAVIATE_HOST=localhost
DB_WEAVIATE_PORT=8080

DB_ARANGODB_URL=http://localhost:8529
DB_ARANGODB_HOST=localhost
DB_ARANGODB_PORT=8529
DB_ARANGODB_USER=root
DB_ARANGODB_PASSWORD=

# =============================================================================
# MESSAGE BROKER SETTINGS (MSG_ prefix)
# =============================================================================
MSG_PULSAR_URL=pulsar://localhost:6650
MSG_PULSAR_TENANT=trading
MSG_PULSAR_NAMESPACE=default

# =============================================================================
# MONITORING SETTINGS (MONITORING_ prefix)
# =============================================================================
MONITORING_PROMETHEUS_PORT=8000
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_LOG_LEVEL=INFO
MONITORING_OTEL_EXPORTER_ENDPOINT=
MONITORING_OTEL_SERVICE_NAME=ai-trading-system

# =============================================================================
# ADDITIONAL CONFIGURATION (Missing from original config)
# =============================================================================
# Rate Limiting (referenced in code)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# CORS and Security Headers
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8007
TRUSTED_HOSTS=localhost,127.0.0.1

# Feature Flags (examples)
FEATURE_PHD_INTELLIGENCE_ENABLED=true
FEATURE_SOCIAL_MEDIA_ENABLED=true
FEATURE_COMPANY_INTELLIGENCE_ENABLED=true
FEATURE_OFF_HOURS_TRAINING_ENABLED=true

# =============================================================================
# ADMIN CONFIGURATION - CRITICAL: Change in production
# =============================================================================
ADMIN_USERNAME=admin
# Use hashed password for production:
# ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here
# Use plain password for development only:
ADMIN_PASSWORD=TradingSystem2024!

# =================================
# Monitoring Configuration
# =================================
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_123

# =================================
# System Configuration
# =================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# =================================
# Resource Limits (Production)
# =================================
MAX_CPU_CORES=32
MAX_MEMORY_GB=400
MODEL_MEMORY_GB=150