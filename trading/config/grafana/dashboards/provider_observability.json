{
  "schemaVersion": 39,
  "title": "Provider Observability",
  "version": 1,
  "editable": true,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (Success vs Error)",
      "id": 1,
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 6},
      "targets": [
        {"expr": "sum by (provider,status) (rate(provider_requests_total[5m]))", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Attempts Rate per Endpoint",
      "id": 2,
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 6},
      "targets": [
        {"expr": "sum by (provider,endpoint) (rate(provider_attempts_total[5m]))", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Ratio (%)",
      "id": 3,
      "gridPos": {"x": 0, "y": 6, "w": 12, "h": 6},
      "targets": [
        {"expr": "100 * (sum by (provider) (rate(provider_requests_total{status=\"error\"}[5m])) / clamp_min(sum by (provider) (rate(provider_requests_total{status=\"success\"}[5m])), 1))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (All Outcomes)",
      "id": 4,
      "gridPos": {"x": 12, "y": 6, "w": 12, "h": 6},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum by (le,provider,endpoint) (rate(provider_request_latency_seconds_bucket[5m])))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "type": "timeseries",
      "title": "Timeouts Rate",
      "id": 5,
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 6},
      "targets": [
        {"expr": "sum by (provider,endpoint) (rate(provider_timeout_total[5m]))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "ops"}}
    },
    {
      "type": "timeseries",
      "title": "Attempts per Success (Amplification)",
      "id": 6,
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 6},
      "targets": [
        {"expr": "sum(rate(provider_attempts_total[15m])) / clamp_min(sum(rate(provider_requests_total{status=\"success\"}[15m])),1)", "refId": "A"}
      ]
    }
  ],
  "templating": {"list": []}
}
