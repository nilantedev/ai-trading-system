{
  "schemaVersion": 39,
  "title": "Ingestion & Retention Overview",
  "version": 1,
  "editable": true,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Historical Backfill Status (active state)",
      "id": 1,
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 5},
      "targets": [
        {"expr": "historical_backfill_status", "refId": "A"}
      ]
    },
    {
      "type": "stat",
      "title": "Backfill Progress %",
      "id": 2,
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 5},
      "targets": [
        {"expr": "historical_backfill_progress_percent", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "type": "bargauge",
      "title": "Retention Deletions by Table/Reason (5m rate)",
      "id": 3,
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 5},
      "targets": [
        {"expr": "sum by (table,reason) (rate(retention_deletions_total[5m]))", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Retention Runs",
      "id": 4,
      "gridPos": {"x": 0, "y": 5, "w": 12, "h": 6},
      "targets": [
        {"expr": "increase(retention_runs_total[24h])", "refId": "A"}
      ]
    },
    {
      "type": "stat",
      "title": "Last Retention Run (UTC)",
      "id": 5,
      "gridPos": {"x": 12, "y": 5, "w": 12, "h": 6},
      "targets": [
        {"expr": "retention_last_run_timestamp", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "s", "decimals": 0}}
    },
    {
      "type": "timeseries",
      "title": "Provider Error Ratio (5m)",
      "id": 6,
      "gridPos": {"x": 0, "y": 11, "w": 12, "h": 6},
      "targets": [
        {"expr": "100 * (sum by (provider) (rate(provider_requests_total{status=\"error\"}[5m])) / clamp_min(sum by (provider) (rate(provider_requests_total{status=\"success\"}[5m])),1))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "type": "timeseries",
      "title": "Provider Latency p95",
      "id": 7,
      "gridPos": {"x": 12, "y": 11, "w": 12, "h": 6},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum by (le,provider,endpoint) (rate(provider_request_latency_seconds_bucket[5m])))", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    }
  ],
  "templating": {"list": []}
}
