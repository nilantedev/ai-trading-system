# Production Server Environment Configuration
# AI Trading System - main-nilante.com Server Deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# Service Configuration
SERVICE_NAME=trading-system
SERVICE_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# Database Configuration - Production Server
# Redis - Hot data on /srv/trading/
DB_REDIS_HOST=127.0.0.1
DB_REDIS_PORT=6379
DB_REDIS_DB=0
DB_REDIS_PASSWORD=${REDIS_PASSWORD}
DB_REDIS_MAX_CONNECTIONS=50

# QuestDB - Time-series data on /mnt/fastdrive/trading/
DB_QUESTDB_HOST=127.0.0.1
DB_QUESTDB_HTTP_PORT=9000
DB_QUESTDB_PG_PORT=8812
DB_QUESTDB_INFLUX_PORT=9009
DB_QUESTDB_DATABASE=qdb
DB_QUESTDB_MIN_POOL_SIZE=10
DB_QUESTDB_MAX_POOL_SIZE=50

# Weaviate - AI vectors on /mnt/fastdrive/trading/
DB_WEAVIATE_HOST=127.0.0.1
DB_WEAVIATE_PORT=8080

# ArangoDB - Graph data on /mnt/fastdrive/trading/
DB_ARANGODB_HOST=127.0.0.1
DB_ARANGODB_PORT=8529
DB_ARANGODB_USER=root
DB_ARANGODB_PASSWORD=${ARANGODB_PASSWORD}

# Message Broker - Production
MSG_PULSAR_URL=pulsar://127.0.0.1:6650
MSG_PULSAR_TENANT=trading
MSG_PULSAR_NAMESPACE=production

# AI Configuration - Production Server
AI_LOCAL_MODEL_PATH=/mnt/fastdrive/trading/models
AI_MODEL_CACHE_SIZE=64GB
AI_MAX_BATCH_SIZE=32
AI_INFERENCE_TIMEOUT=60

# External API Keys (Set via environment or secrets management)
AI_OPENAI_API_KEY=${OPENAI_API_KEY}
AI_ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Trading Configuration - Production
TRADING_PAPER_TRADING=false
TRADING_MAX_POSITION_SIZE=50000.0
TRADING_RISK_LIMIT_PERCENT=2.0
TRADING_POLYGON_API_KEY=${POLYGON_API_KEY}
TRADING_ALPACA_API_KEY=${ALPACA_API_KEY}
TRADING_ALPACA_SECRET_KEY=${ALPACA_SECRET_KEY}

# Monitoring - Production
MONITORING_PROMETHEUS_PORT=9090
MONITORING_LOG_LEVEL=INFO
MONITORING_HEALTH_CHECK_INTERVAL=15
MONITORING_OTEL_EXPORTER_ENDPOINT=http://127.0.0.1:4317
MONITORING_OTEL_SERVICE_NAME=ai-trading-system

# Security - Production
SECURITY_SECRET_KEY=${SECRET_KEY}
SECURITY_JWT_EXPIRE_MINUTES=15
SECURITY_CORS_ORIGINS=https://trading.main-nilante.com
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60

# Feature Flags - Production
FEATURE_LIVE_TRADING_ENABLED=true
FEATURE_RISK_MANAGEMENT_ENABLED=true
FEATURE_MODEL_INFERENCE_ENABLED=true
FEATURE_DASHBOARD_ENABLED=true
FEATURE_API_RATE_LIMITING_ENABLED=true
FEATURE_ADVANCED_MONITORING_ENABLED=true

# Resource Limits - Production Server
DB_CONNECTION_TIMEOUT=60
DB_QUERY_TIMEOUT=120
POOL_RECYCLE_TIME=3600

# Logging - Production
LOG_FORMAT=json
LOG_AGGREGATION_ENABLED=true
LOG_RETENTION_DAYS=30